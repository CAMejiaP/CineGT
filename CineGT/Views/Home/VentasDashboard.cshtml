@model List<string>
@{
    ViewData["Title"] = "Panel de Ventas";
}

<html xmlns="http://www.w3.org/1999/xhtml" lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Menú Principal</title>
    <link rel="stylesheet" href="~/css/Sindex.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Krub&display=swap" rel="stylesheet">
    <link href="~/css/normalize.css" rel="stylesheet">

    <style>        
        html {
            background-color: #252941;
        }

        body {
            font-family: "Krub", sans-serif;
            background-color: #222831;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .menu-container {
            width: 100%;
            background-color: #393e46;
            border-radius: 8px;
            padding: 10px;
            text-align: center;
            display: flex;
            justify-content: center;
            align-items: center;
            align-items: center;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
        }

        .menu-title {
            background-color: #393e46;
            padding: 10px;
            font-size: 62px;
            font-weight: bold;
            color: white;
            margin-bottom: 10px;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .menu-form {
            display: flex;
            flex-direction: column;
            width:80%; 
            gap: 10px;
        }

        .button-row {
            display: flex;
            justify-content: space-between;
        }

        .menu-button {
            flex: 1;
            padding: 10px;
            font-size: 42px;
            border-radius: 4px;
            cursor: pointer;
            color: white;
            background-color: #00adb5;
            margin: 5px;
            text-transform: uppercase;
        }

            .menu-button:last-child {
                margin-right: 0;
            }

            .menu-button:hover {
                opacity: 0.9;
            }
        /* Contenedor principal para centrar el botón */
        .salir-container {
            display: flex;
            justify-content: center;
            align-items: center;
            margin-top: 20px; /* Espacio entre el botón y el contenido superior */
            margin-bottom: 20px;
        }

        /* Estilos para el botón */
        .salir {
            background-color: red;
            padding: 8px 16px; /* Tamaño reducido del botón */
            border-radius: 8px;
            display: flex;
            justify-content: center;
            align-items: center;
            max-width: 200px; /* Ancho máximo para el botón */
            transition: background-color 0.3s;
            text-align: center;
        }

            .salir:hover {
                background-color: darkred;
            }

        .boton_salir {
            background: transparent;
            border: none;
            color: white;
            font-weight: bold;
            font-size: 1.5rem;
            padding: 5px 10px;
            cursor: pointer;
            transition: color 0.3s;
        }

            .boton_salir:hover {
                color: #000;
            }
    </style>


</head>
<body>
    <div class="menu-title">Menú principal</div>
    <div class="menu-container">
        
        <form class="menu-form" method="post" action="/Home/GetParametersProcedure">
            @foreach (string actual in Model)
            {
                <button type="submit" class="menu-button" name="procedureName" value="@actual">@actual</button>

            }
        </form>        
    </div>

    <footer class="salir-container">
        <form class="formulario_boton" action="/Home/Index">
            <div class="salir">
                <input class="boton_salir" type="submit" value="Cerrar Sesión">
            </div>
        </form>
    </footer>
</body>
</html>
